<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

	<!--Daily rolling file appender -->
	<appender name="FILE-ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
     	<File>/log/OnlineMarket-1.0.log</File>
     	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
     		<!-- daily rollover -->
     		<fileNamePattern>/log/OnlineMarket-1.0.%d{yyyy-MM-dd}.log</fileNamePattern>
     		<!-- keep 30 days' worth of history -->
				<maxHistory>30</maxHistory>
     	</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
		  <maxFileSize>100MB</maxFileSize>
		</triggeringPolicy>		
		<layout class="ch.qos.logback.classic.PatternLayout">
      		<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} %M:%line - %msg%n</Pattern>
    	</layout>
	</appender>
	<appender name="FILE-ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter> 	
     	<File>/log/OnlineMarket-error-1.0.log</File>
     	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
     		<!-- daily rollover -->
     		<fileNamePattern>/log/OnlineMarket-error-1.0.%d{yyyy-MM-dd}.log</fileNamePattern>
     		<!-- keep 30 days' worth of history -->
				<maxHistory>30</maxHistory>
     	</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
		  <maxFileSize>100MB</maxFileSize>
		</triggeringPolicy>		
		<layout class="ch.qos.logback.classic.PatternLayout">
      		<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} %M:%line - %msg%n</Pattern>
    	</layout>
	</appender>	

	<!-- Customization in logging levels -->
	<logger name="java.sql.Connection" level="DEBUG" /> 
	<logger name="java.sql.Statement" level="DEBUG" /> 
	
	<root level="DEBUG">
		<appender-ref ref="FILE-ALL" />
		<appender-ref ref="FILE-ERROR" />
	</root>

</configuration>
